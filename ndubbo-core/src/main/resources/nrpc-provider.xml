<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:nrpc="http://dwade.github.com/schema/nrpc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dwade.github.com/schema/nrpc
       http://dwade.github.com/schema/nrpc/nrpc.xsd">
       
    <bean id="npcServerHandler" class="com.github.dwade.ndubbo.core.server.NpcServerHandler" />

    <bean id="server" class="com.github.dwade.ndubbo.core.server.NpcServer">
    	<property name="port" value="8090" />
    	<property name="npcServerHandler" ref="npcServerHandler" />
    </bean>

    <nrpc:service interface="com.github.dwade.ndubbo.core.service.HelloWorld" id="helloService" />
     
</beans>